@import '../utils/mixin.styl'
@import 'normalize.styl'
  
html,body
  height 100%
  width 100%
  #root
    height 100%
    overflow auto
    // width 1330px
    margin 0 auto
  .wrapper
    height 100%
    width 100%
    >header div.content,>footer div.content
      width 1330px
      margin 0 auto
    >header
      position fixed
      height 50px
      width 100%
      background black1
      &.home
        background transparent
        height 100px
        >div>nav a 
          color rgba(255,255,255,0.6)
      >div
        display flex
        justify-content space-between
        align-items center
        padding 0 100px 0 40px
        height 100%
        >nav
          a
            color rgba(255,255,255,0.3)
            font-size 14px
            cursor pointer
            &.current,&:hover
              color rgba(255,255,255,0.9)
        >a
          display flex
          justify-content center
          align-items center
          color rgba(255,255,255,0.8)
          cursor pointer
          img
            margin-right 10px
            filter grayscale(100%) brightness(200%)
    >footer
      position fixed
      height 30px
    >main
      height 100%