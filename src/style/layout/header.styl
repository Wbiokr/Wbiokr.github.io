@import '../common/mixin.styl'
header
  height 60px
  width 100% !important
  b-t-c(darken(#fff,70))
  background darken(#fff,85)
  box-shadow 0 5px 20px 2px darken(#fff,80)
  .headerWrapper
    width 1200px
    margin 0 auto
    display flex
    justify-content space-around
    align-items center
    // cursor pointer
    .headerLogo
      // width 260px
      font-size 30px
      line-height @height
      .logoTxt
        margin-left 20px
        letter-spacing 5px
    .headerNav
      flex 1   
      margin-left 30px
      ul
        li
          float left
          font-size 14px
          margin-right 30px
          margin-top 5px
          a
            color darken(#fff,50)
            transition color linear .3s
            &:hover,&.current
              color darken(#fff,10)
              transition color ease .3s
            >*
              float left
            >i
              margin-right 8px
              margin-top 1px
              &.icon-icon
                margin-top 0px
              &.icon-guanyu
                margin-top 2px
    .headerSearch
      // width 200px
      >p
        float left
        margin-left 38px
        &:first-child
          // margin-top 2px
          input
            background darken(#fff,70)
            height 20px
            padding-left 3px
            color darken(#fff,30)
          i
            margin-left -20px
            font-size 12px
            color darken(#fff,50)
        &:last-child
          font-size 20px
          i
            margin 0 3px
            // font
              